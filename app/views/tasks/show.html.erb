<!-- Main Content -->
<div class="container my-4">
  <!-- Title Section -->
  <div class="card mb-3">
    <div class="card-body">
      <h1 class="card-title">Task Title: <%= @task.title %></h1>
      <p class="card-text"><strong>Description:</strong> <%= @task.description %></p>
      <p class="card-text"><strong>Status:</strong> <%= @task.is_done? ? "Completed" : "Pending" %></p>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="card">
    <div class="card-header">
      <h2>Comments</h2>
    </div>
    <ul class="list-group list-group-flush">
      <% @comments.each do |comment| %>
        <li class="list-group-item">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-1">Author: <%= comment.creator %></h5>
            <%= button_to task_comment_path(@task, comment), method: :delete, data: { turbo_confirm: "Â¿Are you sure?" }, class: "btn btn-danger btn-sm" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
          <p class="mb-1 mt-2"><%= comment.content %></p>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Add Comment Form -->
  <div class="card mt-4">
    <div class="card-header">
      <h4>Add a Comment:</h4>
    </div>
    <div class="card-body">
      <%= render partial: "comments/form", locals: { comment: @comment } %>
    </div>
  </div>
</div>