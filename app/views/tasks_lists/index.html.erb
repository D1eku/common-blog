<div class = "container my-4">
  <div class="card">
    <div class="card-header">
      <h2>Tasks Lists</h2>
    </div>
    <ul class="list-group list-group-flush">
      <!-- Iterate through items (example: tasks or other objects) -->
      <% @tasks_lists.each do |tasks_list| %>
        <li class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1">Title: <%= link_to tasks_list.name, tasks_list_path(tasks_list) %></h5>
          </div>
          <!-- Edit Button -->
          <a href="<%= edit_tasks_list_path(tasks_list) %>" class="btn btn-primary btn-sm">Edit</a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
